<Application x:Class="Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="dark" Color="#1D1B16"/>
        <SolidColorBrush x:Key="light" Color="#f2f2f2"/>
        <SolidColorBrush x:Key="accent" Color="#94b8b8"/>

        <Style TargetType="Button" x:Key="ButtonNumber">
            <Setter Property="Margin" Value="1"/>
        </Style>

        <Style TargetType="Button" x:Key="ButtonOperation">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Background" Value="{StaticResource light}"/>
        </Style>

        <Style TargetType="Button" x:Key="ButtonEqual">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Background" Value="{StaticResource accent}"/>
        </Style>

    </Application.Resources>
</Application>
